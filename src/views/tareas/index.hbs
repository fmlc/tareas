<div class="container">
    <div class="row pt-4 m-auto">
        <div class="col-md-4 col-lg-3 pb-3">
            <div class="card bg-dark text-white card-custom">
                <div class="card-header col-12">
                    <h4 class="card-title">NUEVA TAREA</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Nueva Tarea</p>
                </div>
                <div class="card-footer" style="background: inherit; border-color: inherit;">
                    <a href="/tareas/crear" class="btn btn-success col-12"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        {{#each tareas}}
        <div class="col-md-4 col-lg-3 pb-3">
            <div class="card bg-white card-custom">
                <div class="card-header">
                    <h4 class="card-title">{{ titulo }}</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ descripcion}}</p>
                </div>
                <div class="card-footer d-flex flex-row justify-content-center">
                    <p class="p-2">
                    <a href="/subTareas/{{id}}" class="btn btn-primary col-12"><i class="far fa-eye"></i></a>
                    </p>
                    <form method="post" action="/tareas/ver/" class="p-2">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="btn btn-warning col-md-12"><i class="fas fa-pen"></i></button>
                    </form>
                    <form method="POST" action="/tareas/{{id}}?_method=DELETE" class="p-2">
                        <input type="hidden" name="_method" values="DELETE">
                        <button class="btn btn-danger col-md-12"><i class="far fa-trash-alt"></i></button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}        
    </div>
</div>